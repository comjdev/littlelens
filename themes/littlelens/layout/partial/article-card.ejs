<article
	class="p-4 bg-little-lens-light-400 rounded-lg border border-little-lens-light-600 shadow-md"
>
	<a href="<%= url_for(post.path) %>">
		<% const coverUrl = postCover(post, 'images/default-cover.jpg'); %> <% if
		(coverUrl) { %>
		<img
			class="mb-5 rounded-lg"
			src="<%= coverUrl %>"
			alt="<%= post.title %>"
		/>
		<% } %>
	</a>
	<span
		class="bg-little-lens-blue-100 text-little-lens-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded"
		>Blog Post</span
	>
	<h3 class="my-2 text-2xl font-bold tracking-tight text-gray-900">
		<a href="#"><%= post.title %></a>
	</h3>
	<p class="mb-4 font-light text-gray-500"><%= post.description %></p>
	<div class="flex items-center justify-between">
		<div class="flex items-center space-x-4">
			<img
				class="w-10 h-10 rounded-full"
				src="<%= url_for('img/gill.jpg') %>"
				alt="Gill Juergens - Melbourne Childcare Photographer"
			/>
			<div class="font-medium">
				<div><%= post.author %></div>
				<div>
					<time class="text-sm font-normal text-gray-500"
						><%= date(post.date, 'MMMM D, YYYY') %></time
					>
				</div>
			</div>
		</div>

		<a
			href="<%= url_for(post.path) %>"
			class="inline-flex items-center font-medium text-primary-600 hover:underline dark:text-primary-500"
		>
			Read more
			<svg
				class="ml-2 w-4 h-4"
				fill="currentColor"
				viewBox="0 0 20 20"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path
					fill-rule="evenodd"
					d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
					clip-rule="evenodd"
				></path>
			</svg>
		</a>
	</div>
</article>
