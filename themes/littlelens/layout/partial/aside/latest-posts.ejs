<div class="p-4 mb-6 rounded-lg border border-gray-200">
	<h4 class="mb-4 text-sm font-bold text-gray-900 uppercase">
		Latest Blog Posts
	</h4>
	<% site.posts.sort('date', -1).limit(3).forEach(function(latestPost) { %>
	<div class="mb-6">
		<h5 class="mb-2 text-lg font-bold leading-tight text-gray-900">
			<a href="/<%= latestPost.path %>"> <%= latestPost.title %> </a>
		</h5>
		<p class="mb-2 text-gray-500"><%= latestPost.description %></p>
		<a
			href="/<%= latestPost.path %>"
			class="inline-flex items-center font-medium underline underline-offset-4 text-little-lens-green-600 hover:no-underline"
		>
			Read more
		</a>
	</div>
	<% }) %>
</div>
