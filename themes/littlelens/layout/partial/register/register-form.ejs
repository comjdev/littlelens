<form action="" method="POST" id="registerForm" class="space-y-8">
  <!-- Child'd name  -->
  <h2>Child's name</h2>
  <div class="grid md:grid-cols-2 md:gap-6">
    <div>
      <label
        for="child-firstname"
        class="block mb-2 text-sm font-medium text-gray-900"
      >
        First Name
      </label>
      <input
        type="text"
        id="child-firstname"
        name="child-firstname"
        class="block p-3 w-full text-sm text-gray-900 bg-little-lens-light-400 rounded-lg border border-gray-300 shadow-sm focus:ring-little-lens-green-500 focus:border-little-lens-green-500"
        placeholder="Child's First Name"
        required
      />
    </div>
    <div>
      <label
        for="child-lastname"
        class="block mb-2 text-sm font-medium text-gray-900"
      >
        Last Name</label
      >
      <input
        type="text"
        id="child-lastname"
        name="child-lastname"
        class="block p-3 w-full text-sm text-gray-900 bg-little-lens-light-400 rounded-lg border border-gray-300 shadow-sm focus:ring-little-lens-green-500 focus:border-little-lens-green-500"
        placeholder="Child's Last Name"
        required
      />
    </div>
  </div>

  <!-- Parent's Name  -->
  <h2>Parent Info</h2>
  <div class="grid md:grid-cols-2 md:gap-6">
    <div>
      <label
        for="firstname"
        class="block mb-2 text-sm font-medium text-gray-900"
        >First Name</label
      >
      <input
        type="text"
        id="firstname"
        name="firstname"
        class="block p-3 w-full text-sm text-gray-900 bg-little-lens-light-400 rounded-lg border border-gray-300 shadow-sm focus:ring-little-lens-green-500 focus:border-little-lens-green-500"
        placeholder="Your First Name"
        required
      />
    </div>
    <div>
      <label
        for="lastname"
        class="block mb-2 text-sm font-medium text-gray-900"
      >
        Last Name</label
      >
      <input
        type="text"
        id="lastname"
        name="lastname"
        class="block p-3 w-full text-sm text-gray-900 bg-little-lens-light-400 rounded-lg border border-gray-300 shadow-sm focus:ring-little-lens-green-500 focus:border-little-lens-green-500"
        placeholder="Your Last Name"
        required
      />
    </div>
  </div>

  <!-- Email and Mobile Number -->

  <div class="grid md:grid-cols-2 md:gap-6">
    <div>
      <label for="email" class="block mb-2 text-sm font-medium text-gray-900">
        Email Address
      </label>
      <input
        type="email"
        id="email"
        name="email"
        class="block p-3 w-full text-sm text-gray-900 bg-little-lens-light-400 rounded-lg border border-gray-300 shadow-sm focus:ring-little-lens-green-500 focus:border-little-lens-green-500"
        placeholder="your@email.com"
        required
      />
    </div>
    <div>
      <label for="mobile" class="block mb-2 text-sm font-medium text-gray-900">
        Mobile Number</label
      >
      <input
        type="text"
        id="mobile"
        name="mobile"
        class="block p-3 w-full text-sm text-gray-900 bg-little-lens-light-400 rounded-lg border border-gray-300 shadow-sm focus:ring-little-lens-green-500 focus:border-little-lens-green-500"
        placeholder="0412 345 678"
        required
      />
      <p class="mt-1 text-sm text-gray-500">
        SMS will be sent when your photo gallery is ready to view.
      </p>
    </div>
  </div>

  <hr class="h-px my-8 bg-gray-200 border-0" />

  <!-- Childcare Center  -->
  <h2>Child Care Centre / Kindergarten</h2>
  <div>
    <label
      for="centre-name"
      class="block mb-2 text-sm font-medium text-gray-900"
      >Name of Centre</label
    >
    <input
      type="text"
      id="centre-name"
      name="centre-name"
      class="block p-3 w-full text-sm text-gray-900 bg-little-lens-light-400 rounded-lg border border-gray-300 shadow-sm focus:ring-little-lens-green-500 focus:border-little-lens-green-500"
      placeholder="Name of Child Care Centre / Kindergarten"
      required
    />
  </div>

  <div>
    <!-- Room  -->
    <label for="room" class="block mb-2 text-sm font-medium text-gray-900"
      >Select Group and Date</label
    >
    <select
      id="room"
      class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-little-lens-green-500 focus:border-little-lens-green-500 block w-full p-2.5"
    >
      <option>Group A - Monday 28th May</option>
      <option>Group B - Tuesday 29th May</option>
      <option>Group C - Wednesday 30th May</option>
      <option>Group D - Thursday 31st May</option>
    </select>
  </div>

  <!-- Message  -->
  <div>
    <div class="mt-8">
      <label for="message" class="block mb-2 text-sm font-medium text-gray-900"
        >Your message (optional)</label
      >
      <textarea
        id="message"
        name="message"
        rows="6"
        class="block p-2.5 w-full text-sm text-gray-900 bg-little-lens-light-400 rounded-lg shadow-sm border border-gray-300 focus:ring-little-lens-green-500 focus:border-little-lens-green-500"
        placeholder="Leave a comment..."
      ></textarea>
    </div>
  </div>

  <div>
    <!-- Siblings Photo -->
    <h3 class="block mb-1 text-sm font-medium text-gray-900">
      Would you like us to take sibling photos for children who are all enrolled
      at the centre?
    </h3>
    <div class="flex items-center mb-4">
      <input
        id="sibling"
        type="checkbox"
        value=""
        class="w-4 h-4 text-little-lens-green-600 bg-gray-100 border-gray-300 rounded-sm focus:ring-little-lens-green-500"
      />
      <label for="sibling" class="ms-2 text-sm font-medium text-gray-700">
        Yes, please! More of my children attend the centre and I would like
        individual and sibling photos of them. I will book their photo day on
        the same day.
      </label>
    </div>

    <div class="hidden" id="sibling-name-container">
      <label
        for="sibling-name"
        class="block mb-2 text-sm font-medium text-gray-900"
      >
        Sibling's Name
      </label>
      <input
        type="text"
        id="sibling-name"
        name="sibling-name"
        class="block p-3 w-full text-sm text-gray-900 bg-little-lens-light-400 rounded-lg border border-gray-300 shadow-sm focus:ring-little-lens-green-500 focus:border-little-lens-green-500"
        placeholder="Full name of your child's sibling"
      />
    </div>
  </div>

  <div
    class="p-4 mb-4 text-sm text-little-lens-green-800 rounded-lg bg-little-lens-green-100"
  >
    <span class="font-medium">Dress to impress!</span> Please make sure your
    child is dressed just the way you’d like for their photos on their scheduled
    photo day. Unfortunately, we’re not able to retake photos if the outfit
    isn’t what you had in mind—so a quick check in the morning can go a long
    way!
  </div>

  <hr class="h-px my-8 bg-gray-200 border-0" />

  <!-- Permission to use the photo of the child for marketing purposes -->
  <h3 class="block mb-1 text-sm font-medium text-gray-900">
    Can we share your child’s smile?
  </h3>
  <p class="block mb-1 text-sm font-medium text-gray-900">
    We love celebrating the joy of photo day by sharing some of the happy faces
    we capture on our social media (@littlelens), website, and promotional
    materials — with your permission, of course! No names are ever used, just
    big smiles and sweet moments.
  </p>
  <div class="flex items-center mb-4">
    <input
      checked
      id="media-yes"
      type="radio"
      value=""
      name="media"
      class="w-4 h-4 text-little-lens-green-600 bg-gray-100 border-gray-300 focus:ring-little-lens-green-500 focus:ring-2"
    />

    <label for="media-yes" class="ms-2 text-sm font-medium text-gray-900"
      >Yes, I give permission</label
    >
  </div>
  <div class="flex items-center">
    <input
      id="media-no"
      type="radio"
      value=""
      name="media"
      class="w-4 h-4 text-little-lens-green-600 bg-gray-100 border-gray-300 focus:ring-little-lens-green-500 focus:ring-2"
    />
    <label for="media-no" class="ms-2 text-sm font-medium text-gray-900"
      >No, thank you</label
    >
  </div>

  <hr class="h-px my-8 bg-gray-200 border-0" />

  <!-- Family Photos  -->
  <div>
    <h3 class="block mb-1 text-sm font-medium text-gray-900">
      Did you know I also photograph families?
    </h3>
    <p>
      If you’re interested, I’d love to send you a little info about my family
      photo sessions — perfect for capturing memories beyond photo day!
    </p>
    <div class="flex items-center mb-4">
      <input
        checked
        id="sibling"
        type="checkbox"
        value=""
        class="w-4 h-4 text-little-lens-green-600 bg-gray-100 border-gray-300 rounded-sm focus:ring-little-lens-green-500"
      />
      <label for="sibling" class="ms-2 text-sm font-medium text-gray-700">
        Yes, please send me information about family photos
      </label>
    </div>
  </div>

  <hr class="h-px my-8 bg-gray-200 border-0" />

  <h2>Pricing</h2>

  <div
    class="p-4 mb-4 text-sm text-little-lens-green-800 rounded-lg bg-little-lens-green-100"
  >
    <span class="font-medium">There is NO upfront fee!</span> You get to view
    and then purchase if you wish.
  </div>

  <div
    class="p-4 mb-4 text-sm text-little-lens-green-800 rounded-lg bg-little-lens-green-100"
  >
    There is NO minimum spend and a variety of packages to choose from.
  </div>

  <button
    type="submit"
    class="py-3 px-5 text-sm font-medium text-center text-white rounded-lg bg-little-lens-green-700 sm:w-fit hover:bg-little-lens-green-800 focus:ring-4 focus:outline-none focus:ring-little-lens-green-300"
  >
    Register <span id="register-name">your child</span>
  </button>

  <div
    id="formSuccess"
    class="hidden mt-4 text-sm text-gray-900 bg-little-lens-light-400 rounded-lg p-4"
    role="alert"
  >
    <span class="font-medium">Thank you for your message!</span> We will get
    back to you as soon as possible.
  </div>
  <div
    id="formError"
    class="hidden mt-4 text-sm text-gray-900 bg-little-lens-light-400 rounded-lg p-4"
    role="alert"
  >
    <span class="font-medium">Oops!</span> Something went wrong. Please try
    again later.
  </div>
  <div
    id="formLoading"
    class="hidden mt-4 text-sm text-gray-900 bg-little-lens-light-400 rounded-lg p-4"
    role="alert"
  >
    <div class="flex">
      <span role="status">
        <svg
          aria-hidden="true"
          class="w-4 h-4 me-2 text-gray-200 animate-spin fill-little-lens-green-600"
          viewBox="0 0 100 101"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z"
            fill="currentColor"
          />
          <path
            d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z"
            fill="currentFill"
          />
        </svg>
        <span class="sr-only">Loading...</span>
      </span>
      <span class="font-medium">Sending...</span> Please wait while we send your
      message.
    </div>
  </div>
</form>

<script>
  const form = document.getElementById("registerForm");
  const formSuccess = document.getElementById("formSuccess");
  const formError = document.getElementById("formError");
  const formLoading = document.getElementById("formLoading");

  // Retrieve child's first name
  const childFirstName = document.getElementById("child-firstname");
  childFirstName.addEventListener("input", function () {
    // Submit Btn
    const registerName = document.getElementById("register-name");
    registerName.textContent = this.value || "your child";

    // Sibling name input
    const siblingNameInput = document.getElementById("sibling-name");
    siblingNameInput.placeholder =
      `Full name of ${this.value}'s sibling` ||
      "Full name of you child's sibling";
  });

  form.addEventListener("submit", function (event) {
    event.preventDefault();
    formLoading.classList.remove("hidden");
    formSuccess.classList.add("hidden");
    formError.classList.add("hidden");

    // Simulate a successful submission
    setTimeout(() => {
      formLoading.classList.add("hidden");
      formSuccess.classList.remove("hidden");
    }, 2000);
  });

  // Show sibling name input if sibling checkbox is checked
  const siblingCheckbox = document.getElementById("sibling");
  const siblingNameContainer = document.getElementById(
    "sibling-name-container"
  );
  const siblingNameInput = document.getElementById("sibling-name");

  siblingCheckbox.addEventListener("change", function () {
    siblingNameContainer.classList.toggle("hidden", !this.checked);
    siblingNameInput.required = this.checked;
  });

  // Fetch bookings
  const bookingsApi =
    "https://script.google.com/macros/s/AKfycbyYEoUigecPpsNS_4Sv8nRKEJjo7bib2GEdzhd-12anw_lZi5oNkf9Wlzk278919cZs/exec";

  const fetchBookings = async () => {
    try {
      const response = await fetch(bookingsApi);
      if (!response.ok) {
        throw new Error("Network response was not ok");
      }
      const data = await response.json();
      console.log(data);
    } catch (error) {
      console.error("Error fetching bookings:", error);
    }
  };

  // Call the function to fetch bookings
  fetchBookings();
</script>
